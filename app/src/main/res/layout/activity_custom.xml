<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    tools:context="omeng.bbwhm.com.weixin.custom_view.CustomActivity">


    <Button
        android:id="@+id/cus_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="滑动置顶" />

    <Button
        android:id="@+id/cus_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="等比例控件"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/cus_1" />

    <Button
        android:id="@+id/cus_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:text="Draw-Path"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/cus_2" />

    <Button
        android:id="@+id/cus_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/cus_3"
        android:text="Button" />
    <omeng.bbwhm.com.weixin.custom_view.view.HistogramView
        android:id="@+id/cus_zhifang"

        android:layout_below="@+id/cus_4"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>
